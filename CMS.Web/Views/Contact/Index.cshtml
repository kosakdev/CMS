@{
    ViewBag.Title = "Kontakt";
    ViewBag.Description = "";
    ViewBag.Image = "assets/dist/images/kontakt_fotka.jpg";
    ViewBag.ImageDescription = "Markéta Vodičková a Filip Vítů. Zlínské duo. Zlínská kapela na svatby, vernisáže, firemní akce.";
    
    Layout = "_Layout";
}

<section class="section section__form">
    <div class="container">
        <h2 class="section__title">Poptávkový formulář</h2>
        <div class="section__form__block">
            <div class="section__form__block--column">
                <div class="section__form__block__item">
                    <label class="section__calendar__block__list__item__label" for="jmeno">Jméno *</label>
                    <input class="section__calendar__block__list__item__input" type="text" id="jmeno" placeholder="">
                </div>
                <div class="section__form__block__item">
                    <label class="section__calendar__block__list__item__label" for="email">Email *</label>
                    <input class="section__calendar__block__list__item__input" type="text" id="email" placeholder="">
                </div>
                <div class="section__form__block__item">
                    <label class="section__calendar__block__list__item__label" for="datum">Datum *</label>
                    <input class="section__calendar__block__list__item__input" type="text" id="datum" placeholder="">
                </div>
                <div class="section__form__block__item">
                    <label class="section__calendar__block__list__item__label" for="misto">Místo *</label>
                    <input class="section__calendar__block__list__item__input" type="text" id="misto" placeholder="">
                </div>
                <div class="section__form__block__item">
                    <label class="section__calendar__block__list__item__label" for="typ-akce">Typ akce *</label>
                    <select id="typ-akce">
                        <option value="koncert">Koncert</option>
                        <option value="vernisaz">Vernisáž</option>
                        <option value="svatba">Svatba</option>
                        <option value="oslava">Oslava</option>
                        <option value="firemni">Firemní večírek</option>
                        <option value="jine">Jiné</option>
                    </select>
                </div>
                <div class="section__form__block__item">
                    <label class="section__calendar__block__list__item__label" for="slozeni-kapely">Složení kapely *</label>
                    <select id="slozeni-kapely">
                        <option value="sami">Marketa Vodičková & Filip Vítů</option>
                        <option value="cajon">Marketa Vodičková & Filip Vítů & cajon</option>
                        <option value="kapela">Marketa Vodičková & Filip Vítů & kapela</option>
                    </select>
                </div>
                <div class="section__form__block__item">
                    <label class="section__calendar__block__list__item__label" for="telefon">Telefon</label>
                    <input class="section__calendar__block__list__item__input" type="text" id="telefon" placeholder="">
                </div>
                <div class="section__form__block__item">
                </div>
            </div>
            <div class="section__form__block__item">
                <label class="section__calendar__block__list__item__label" for="text">Další poznámky</label>
                <textarea class="section__calendar__block__list__item__input" type="text" id="text"></textarea>
            </div>
            <div class="section__form__block__item">
                <input type="submit" value="Odeslat">
            </div>
            <div class="section__form__block__item">
                <p>Odesláním souhlasím se zpracování osobních údajů.</p>
            </div>
            
        </div>
    </div>
</section>

<section class="section section__contact">
    <div class="section__contact__back-image"></div>
    <div class="container">
        <div class="section__contact__block">
            <div class="section__contact__block__text-block">
                <p>vodickova.vitu@gmail.com</p>
                <p>Filip Vítů <span class="section__contact__block__text-block__text--number">+420 773 220 195</span></p>
                <p>Markéta Vodičková <span class="section__contact__block__text-block__text--number">+420 737 542 418</span></p>
            </div>
            <div class="section__contact__block__image">
                <img src="assets/dist/images/kontakt_delici_fotka.jpg" alt="Markéta Vodičková a Filip Vítů." />
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => { new web.MainController(); });
    </script>
}