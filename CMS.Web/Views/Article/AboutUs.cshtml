@model ICollection<CMS.Models.BandComposition.BandCompositionListModel>

@{
    ViewBag.Title = "O nás";
    ViewBag.Description = "Můžete nás slyšet na různých akcích. A pokud jsme se vám zalíbili, moc rádi hudebně doplníme i tu vaši.";
    ViewBag.Image = "assets/dist/images/onas_fotka.jpg";
    ViewBag.ImageDescription = "Markéta Vodičková a Filip Vítů. Hudební duo na firemní akce, koncerty, vernisáže...";
    
    Layout = "_Layout";
}

<section class="section section__photos">
    <div class="container">
        <div class="section__photos__block">
            <div class="section__photos__block__list">
                <div id="koncert" class="section__photos__block__list__item section__photos__block__list__item--active">
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/koncert/onas_koncert_1.jpg" alt="Markéta Vodičková a Filip Vítů. Koncerty.">
                        <img class="section__photos__block__list__item__photo section__photos__block__list__item__photo--small" src="assets/dist/images/photos/koncert/onas_koncert_3.jpg" alt="Markéta Vodičková a Filip Vítů.Hrajeme na velkých i malých akcích, soukromých i veřejných.">
                    </div>
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/koncert/onas_koncert_2.jpg" alt="Markéta Vodičková a Filip Vítů. Koncert ve Zlíně.">
                    </div>
                </div>
                <div id="vernisaz" class="section__photos__block__list__item">
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/vernisaz/onas_vernisaz_1.jpg" alt="Markéta Vodičková a Filip Vítů.  Hudba na vernisáž.">
                        <img class="section__photos__block__list__item__photo section__photos__block__list__item__photo--small" src="assets/dist/images/photos/vernisaz/onas_vernisaz_3.jpg" alt="Markéta Vodičková a Filip Vítů. Hrajeme na vernisážích.">
                    </div>
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/vernisaz/onas_vernisaz_2.jpg" alt="Markéta Vodičková a Filip Vítů. Hudební doprovod na vernisáž.">
                    </div>
                </div>
                <div id="svatba" class="section__photos__block__list__item">
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/svatba/onas_svatba_1.jpg" alt="Markéta Vodičková a Filip Vítů. Hudební doprovod na svatbu.">
                        <img class="section__photos__block__list__item__photo section__photos__block__list__item__photo--small" src="assets/dist/images/photos/svatba/onas_svatba_3.jpg" alt="Markéta Vodičková a Filip Vítů. Duo na svatbu.">
                    </div>
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/svatba/onas_svatba_2.jpg" alt="Markéta Vodičková a Filip Vítů. Zpěv a kytara na svatbu.">
                    </div>
                </div>
                <div id="oslava" class="section__photos__block__list__item">
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/oslava/onas_oslava_1.jpg" alt="Markéta Vodičková a Filip Vítů. Hudební doprovod na oslavu ve Zlíně.">
                        <img class="section__photos__block__list__item__photo section__photos__block__list__item__photo--small" src="assets/dist/images/photos/oslava/onas_oslava_3.jpg" alt="Markéta Vodičková a Filip Vítů. Hudba na oslavu. Zpěv a kytara.">
                    </div>
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/oslava/onas_oslava_2.jpg" alt="Markéta Vodičková a Filip Vítů. Zpěv a kytara na oslavu.">
                    </div>
                </div>
                <div id="firemni-vecirek" class="section__photos__block__list__item">
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/firemni-vecirek/onas_firvec_1.jpg" alt="Markéta Vodičková a Filip Vítů na firemním večírku.">
                        <img class="section__photos__block__list__item__photo section__photos__block__list__item__photo--small" src="assets/dist/images/photos/firemni-vecirek/onas_firvec_3.jpg" alt="Markéta Vodičková a Filip Vítů. Hrajeme na firemních večírcích. Firemní večírky ve ZLíně.">
                    </div>
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/firemni-vecirek/onas_firvec_2.jpg" alt="Markéta Vodičková a Filip Vítů. Hudební doprovod na firemní večírek.">
                    </div>
                </div>
                <div id="jine" class="section__photos__block__list__item">
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/jine/onas_jine_1.jpg" alt="Markéta Vodičková a Filip Vítů. Zpěv a kytara na akce všeho druhu.">
                        <img class="section__photos__block__list__item__photo section__photos__block__list__item__photo--small" src="assets/dist/images/photos/jine/onas_jine_3.jpg" alt="Markéta Vodičková a Filip Vítů. Hudební doprovod na každou příležitost.">
                    </div>
                    <div class="section__photos__block__list__item__column">
                        <img class="section__photos__block__list__item__photo" src="assets/dist/images/photos/jine/onas_jine_2.jpg" alt="Markéta Vodičková a Filip Vítů. Zlínské duo.">
                    </div>
                </div>
            </div>
            <div class="section__photos__block__navigation">
                <ul class="section__photos__block__navigation__list">
                    <li data-tab-id="koncert" class="section__photos__block__navigation__list__item section__photos__block__navigation__list__item--active"><span class="section__photos__block__navigation__list__item__text">KONCERT</span></li>
                    <li data-tab-id="vernisaz" class="section__photos__block__navigation__list__item"><span class="section__photos__block__navigation__list__item__text">VERNISÁŽ</span></li>
                    <li data-tab-id="svatba" class="section__photos__block__navigation__list__item"><span class="section__photos__block__navigation__list__item__text">SVATBA</span></li>
                    <li data-tab-id="oslava" class="section__photos__block__navigation__list__item"><span class="section__photos__block__navigation__list__item__text">OSLAVA</span></li>
                    <li data-tab-id="firemni-vecirek" class="section__photos__block__navigation__list__item"><span class="section__photos__block__navigation__list__item__text">FIREMNÍ VEČÍREK</span></li>
                    <li data-tab-id="jine" class="section__photos__block__navigation__list__item"><span class="section__photos__block__navigation__list__item__text">JINÉ</span></li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="section section__band">
    <div class="container">
        <div class="section__band__back-image"></div>
        <div class="section__band__block">
            <h2 class="section__title section__band__block__title">Vystupujeme ve @Model.Count <span class="section__band__block__title--new-line">variantách</span></h2>
            <div class="section__band__block__list">
                @foreach (var item in Model)
                {
                    <div class="section__band__block__list__item">
                        <div class="section__band__block__list__item__image">
                            <img src="~/uploads/@item.FileName" alt="Markéta Vodičková a Filip Vítů. Zpěv, kytara, looper. Skvělá varianta na většinu akcí. Hudební doprovod. Zlínské duo.">
                        </div>
                        <div class="section__band__block__list__item__text">
                            <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<section class="section section__simple-text">
    <div class="container">
        <p class="section__simple-text__text">
            Disponujeme vlastní zvukovou aparaturou, kterou přizpůsobíme charakteru akce.
        </p>
        <p class="section__simple-text__text">
            Technické požadavky a stage plan zašleme e-mailem.
        </p>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => { new web.MainController(); });
        document.addEventListener("DOMContentLoaded", () => { new web.TabsController(); });
    </script>
}